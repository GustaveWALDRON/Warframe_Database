CREATE VIEW Beginner_Weapons AS
SELECT Name, Type, Damage, Main_Damage_Type, Attack_Speed, Crit_Chance, Crit_Damage, Status_Chance
FROM Melee_Weapon
WHERE Rank=0 AND Dojo_Research=0 AND Market=1;

CREATE VIEW Crit_Weapons AS
SELECT Name, Type, Damage, Main_Damage_Type, Attack_Speed, Crit_Chance, Crit_Damage, Status_Chance
FROM Melee_Weapon
WHERE Crit_Damage>2;
